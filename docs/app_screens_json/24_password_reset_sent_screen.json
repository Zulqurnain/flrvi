{
  "screenId": "PasswordResetSentScreen",
  "version": "1.0",
  "description": "A confirmation screen shown to the user after they have successfully requested a password reset link.",
  "layout": {
    "type": "stack",
    "alignment": "center",
    "padding": 24
  },
  "uiComponents": [
    {
      "componentId": "SuccessIcon",
      "componentType": "Icon",
      "iconName": "check-circle",
      "style": {
        "size": 64,
        "color": "successGreen"
      }
    },
    {
      "componentId": "ScreenTitle",
      "componentType": "Text",
      "content": {
        "key": "password_reset_sent_title",
        "defaultValue": "Check Your Email"
      },
      "style": "h1_center"
    },
    {
      "componentId": "InstructionsText",
      "componentType": "Text",
      "content": {
        "key": "password_reset_sent_instructions",
        "defaultValue": "We've sent a link to reset your password to your email address. Please check your inbox."
      },
      "style": "body_center"
    },
    {
      "componentId": "BackToLoginButton",
      "componentType": "Button",
      "style": "primary_large_fullWidth",
      "content": {
        "labelKey": "back_to_login_button",
        "defaultValue": "Back to Login"
      },
      "userActions": [
        {
          "trigger": "onPress",
          "action": "navigateTo",
          "payload": {
            "targetScreen": "LoginScreen"
          }
        }
      ]
    }
  ],
  "stateManagement": {
    "redux": {
      "selectors": [],
      "actions": []
    }
  },
  "apiCalls": []
}
