{
  "screenId": "ForgotPasswordScreen",
  "version": "1.0",
  "description": "Allows a user to initiate the password reset process.",
  "layout": {
    "type": "stack",
    "padding": 24
  },
  "uiComponents": [
    {
      "componentId": "Header",
      "componentType": "Header",
      "title": { "key": "forgot_password_title", "defaultValue": "Forgot Password" },
      "leftAction": { "icon": "back", "action": "navigateBack" }
    },
    {
      "componentId": "InstructionsText",
      "componentType": "Text",
      "content": {
        "key": "forgot_password_instructions",
        "defaultValue": "Enter your email address and we'll send you a link to reset your password."
      },
      "style": "body"
    },
    {
      "componentId": "EmailInput",
      "componentType": "TextInput",
      "label": { "key": "email_label", "defaultValue": "Email" },
      "keyboardType": "email-address",
      "validation": {
        "rules": ["required", "isEmail"]
      }
    },
    {
      "componentId": "SendResetLinkButton",
      "componentType": "Button",
      "style": "primary_large_fullWidth",
      "content": {
        "labelKey": "send_reset_link_button",
        "defaultValue": "Send Reset Link"
      },
      "userActions": [
        {
          "trigger": "onPress",
          "action": "dispatchThunk",
          "payload": {
            "thunk": "sendPasswordResetEmail",
            "onSuccess": {
              "action": "navigateTo",
              "payload": { "targetScreen": "PasswordResetSentScreen" }
            },
            "onError": {
              "action": "showAlert",
              "payload": { "messageKey": "reset_email_error" }
            }
          }
        }
      ]
    }
  ],
  "stateManagement": {
    "redux": {
      "selectors": ["selectPasswordResetStatus"],
      "actions": ["sendPasswordResetEmail"]
    }
  },
  "apiCalls": [
    {
      "id": "sendPasswordResetEmail",
      "endpoint": "/users/forgot-password",
      "method": "POST",
      "description": "Initiates the password reset process for a given email address."
    }
  ]
}
