{
  "version": "1.0",
  "last_updated": "2025-08-10",
  "base_url": "https://api.flrvi.com/api",
  "authentication": {
    "type": "JWT",
    "method": "Bearer token in Authorization header"
  },
  "endpoints": [
    {
      "name": "User Registration",
      "method": "POST",
      "path": "/v1/users/register",
      "description": "Register a new user account",
      "request": {
        "content-type": "application/json",
        "schema": {
          "$ref": "api_schemas_json/register_user.json"
        },
        "example": {
          "name": "Nok Chanya",
          "email": "nok@example.com",
          "password": "SecurePass123!",
          "gender": "Woman",
          "birthdate": "1995-05-15"
        }
      },
      "responses": {
        "201": {
          "description": "User created successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "JWT authentication token"
                  },
                  "user": {
                    "type": "object",
                    "properties": {
                      "id": {"type": "string"},
                      "name": {"type": "string"},
                      "email": {"type": "string"}
                    }
                  }
                }
              },
              "example": {
                "token": "eyJhbGci...",
                "user": {
                  "id": "60d5ecb8f8b1a12e3c4e5f6a",
                  "name": "Nok Chanya",
                  "email": "nok@example.com"
                }
              }
            }
          }
        },
        "400": {
          "description": "Validation error or user exists",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {"type": "string"}
                }
              },
              "example": {
                "error": "Email already registered"
              }
            }
          }
        }
      }
    },
    {
      "name": "User Login",
      "method": "POST",
      "path": "/v1/users/login",
      "description": "Authenticate an existing user",
      "request": {
        "content-type": "application/json",
        "schema": {
          "$ref": "api_schemas_json/login_user.json"
        }
      },
      "responses": {
        "200": {
          "description": "Login successful",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {"type": "string"}
                }
              }
            }
          }
        },
        "401": {
          "description": "Invalid credentials",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {"type": "string"}
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Get User Profile",
      "method": "GET",
      "path": "/v1/profile/me",
      "description": "Get the authenticated user's profile",
      "security": [
        {"bearerAuth": []}
      ],
      "responses": {
        "200": {
          "description": "Profile retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "api_schemas_json/get_current_user_profile.json"
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {"type": "string"}
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Update User Profile",
      "method": "PUT",
      "path": "/v1/profile",
      "description": "Create or update user profile",
      "security": [
        {"bearerAuth": []}
      ],
      "request": {
        "content-type": "application/json",
        "schema": {
          "$ref": "api_schemas_json/create_or_update_profile.json"
        }
      },
      "responses": {
        "200": {
          "description": "Profile updated successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {"type": "string"},
                  "profile": {
                    "$ref": "api_schemas_json/get_current_user_profile.json"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Validation error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  ],
  "error_handling": {
    "standard_format": {
      "error": "Error message string",
      "code": "HTTP status code",
      "details": "Additional error details (optional)"
    }
  }
}
